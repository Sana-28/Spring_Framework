<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Circle Bean -->
	<bean id="circleBean" class="com.bridgeit.ShapeImplementation.Circle"></bean>

	<!-- Inject Circle bean via constructor argument -->
	<bean id="geometryBean" class="com.bridgeit.ShapeImplementation.Geometry">

		<!-- Here ref attribute of </constructor-arg> element is used to pass the 
			reference of the Circle object. -->
		<constructor-arg ref="circleBean" />
	</bean>

</beans>